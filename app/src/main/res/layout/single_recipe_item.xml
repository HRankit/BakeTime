<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_recipe_item">

    <android.support.v7.widget.CardView
        android:id="@+id/recipeCardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:background="@null"
        app:cardBackgroundColor="@color/translucentColor"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/recipeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:text="@string/nuttela_pie_placeholder"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            app:layout_constraintBottom_toBottomOf="@+id/recipeCardView"
            app:layout_constraintStart_toStartOf="parent" />

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>