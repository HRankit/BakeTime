<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">


    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:padding="2dp">


        <TextView
            android:id="@+id/step_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingEnd="@dimen/steps_description_padding_rightt"
            android:paddingLeft="@dimen/steps_description_padding_left"
            android:paddingRight="@dimen/steps_description_padding_rightt"
            android:paddingStart="@dimen/steps_description_padding_left"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/step_short_descrpition" />

        <TextView
            android:id="@+id/step_short_descrpition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingEnd="@dimen/steps_description_padding_rightt"
            android:paddingLeft="@dimen/steps_description_padding_left"
            android:paddingRight="@dimen/steps_description_padding_rightt"
            android:paddingStart="@dimen/steps_description_padding_left"
            android:textColor="@color/anothercolorText"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/label_not_playing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingEnd="@dimen/steps_description_padding_rightt"
            android:paddingLeft="@dimen/steps_description_padding_left"
            android:paddingRight="@dimen/steps_description_padding_rightt"
            android:paddingStart="@dimen/steps_description_padding_left"
            android:text="@string/click_below_link_if_video_is_not_playing"
            android:textColor="@color/anothercolorText"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/step_description" />


        <TextView
            android:id="@+id/step_video_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:autoLink="web"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/label_not_playing" />

        <TextView
            android:id="@+id/step_thumbnail_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:autoLink="web"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/step_video_url" />


    </android.support.constraint.ConstraintLayout>
</android.support.v4.widget.NestedScrollView>